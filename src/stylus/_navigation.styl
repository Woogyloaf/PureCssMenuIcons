// NAVIGATION
// ***********************************

nav
	display none
	div
		a
			font-size 55px
			text-align center
			display block
			color white
			transition: all 0s;
			&:visited
				text-decoration: none;
				color: white;
			&:hover
				color #3498db
				transition: all 0s;
	// .nav-items
.nav-active
	display flex
	top 0px
	bottom 0px
	left 0px
	right 0px
	background #2ecc71
	position absolute
	z-index 99
	justify-content center
	align-items center
button
	&:focus
		outline 0	





// menu1


#cb1
	// display none


.tt1
	width wh = 60px 
	height wh
	position relative
	margin 0
	padding 0
	background #ccc
	&:focus
		outline none
	input
		display none
	label
		margin 5px
		width h = 50px
		height 7px
		// background transparent
		top 19px
		display block
		position absolute
		cursor pointer
		border none
		display block
		// z-index 100
		font-size 0
		border-radius br = 5px
		text-indent -9999
		transition-duration .5s
		&:before
		&:after
			width h
			height 7px
			background #3498db
			position absolute
			// left 0px
			top 0
			display block
			content ''
			border-radius br
			transform rotate(45deg)
			transition-duration .5s
		&:after
			top 0
			transform rotate(-45deg)
		
	input:checked +	label
		background #f09
		width 50px
		&:after
			top 19px
			transform rotate(0deg)
			transition-duration .5s
		&:before
			top -19px
			transform rotate(0deg)
			transition-duration .5s
			


